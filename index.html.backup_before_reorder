      <script>
        document.addEventListener('DOMContentLoaded', () => {
          document.getElementById('signup-user-agent').value = navigator.userAgent;
          fetch('https://ipapi.co/json/')
            .then(r => r.json())
            .then(d => {
              document.getElementById('signup-ip').value = d.ip;
            })
            .catch(e => console.error('Geo error:', e));
        });
      </script>
